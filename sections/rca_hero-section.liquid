{{ 'hero-section.css' | asset_url | stylesheet_tag }}

<div class="swiper-container hero-slider {{ section.settings.layout_style }}" style="background-color: {{ section.settings.background_color }};">
  <!-- Additional wrapper for slides -->
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
    <div class="swiper-slide">
    <div class="slide-image">
        <img src="{{ block.settings.image |  image_url }}" >
    </div>
      <div class="slide-content-container">
        <h1>{{ block.settings.heading }}</h1>
        <p>{{ block.settings.subtext }}</p>
        <a href="{{ block.settings.button_url }}" class="btn">{{ block.settings.button_label }}</a>
      </div>
    </div>
    {% endfor %}
  </div>
  <!-- Add Pagination -->
  <div class="swiper-pagination"></div>
</div>
{% schema %}
    {
        "name": "RCA Hero Slider",
        "settings": [
            {
                "type": "select",
                "id": "layout_style",
                "label": "Layout Style",
                "options": [
                    {
                        "value": "text_left",
                        "label": "Text Block Left"
                    },
                    {
                        "value": "text_right",
                        "label": "Text Block Right"
                    },
                    {
                        "value": "text_center",
                        "label": "Text Block Center"
                    }
                ],
                "default": "text_left"
            },
            {
                        "type": "color",
                        "id": "background_color",
                        "label": "Background Color"
                    }
        ],
        "blocks": [
            {
                "type": "image",
                "name": "Slide",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    },
                    {
                        "type": "text",
                        "id": "heading",
                        "label": "Heading"
                    },
                    {
                        "type": "text",
                        "id": "subtext",
                        "label": "Subtext"
                    },
                    {
                        "type": "url",
                        "id": "button_url",
                        "label": "Button URL"
                    },
                    {
                        "type": "text",
                        "id": "button_label",
                        "label": "Button Label"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "RCA Hero Slider",
                "category": "Image"
            }
        ]
    }
    {% endschema %}

    <script>
        document.addEventListener('DOMContentLoaded', function () {
    // Initialize Swiper after the document is fully loaded
    var heroSlider = new Swiper('.hero-slider', {
        pagination: {
            el: '.swiper-pagination',
            clickable: true
        },
        loop: true,
        autoHeight: true // You can set this to false if you want a fixed height
    });
});
    </script>
    