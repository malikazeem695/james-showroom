<section class="showroom-locations">
    <div class="section-heading">
  <h2>{{ section.settings.main_heading }}</h2>
  <p>{{ section.settings.description }}</p>
  </div>
  <div class="showroom-cards blocks-length-{{ section.blocks.size }}">
    {% for block in section.blocks %}
      <div class="showroom-card">
        <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.card_title }}">
        <div class="showroom-info">
            <div class="card_title">
          <h2>{{ block.settings.card_title }}</h2>
          </div>
          <div class="card_details">
            {{ block.settings.card_description }}
          
          
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  <div class="section-footer">
    <a href="{{ section.settings.event_rsvp_url }}" class="btn btn-primary full-width section-footer-btn">
        <span>{{ section.settings.event_rsvp_text }}</span>
        {% render 'right-brand-arrow' %}   
      </a>
  </div>
</section>

{% schema %}
    {
      "name": "Showroom Collaboration",
      "max_blocks": 3,
      "settings": [
        {
          "type": "text",
          "id": "main_heading",
          "label": "Heading",
          "default": "JAMES Showroom in Collaboration"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Contact us if you are interested in hosting a pop-upÂ  event in our Worth Avenue space."
        },
        {
          "type": "text",
          "id": "event_rsvp_text",
          "label": "Button Text",
          "default": "Schedule An Event"
        },
        {
          "type": "url",
          "id": "event_rsvp_url",
          "label": "Button URL"
        }
      ],
      "blocks": [
        {
          "type": "custom-block",
          "name": "Collaboration Block",
          "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "card_title",
          "label": "Showroom Title",
          "default": "Showroom Name"
        },
        {
          "type": "textarea",
          "id": "card_description",
          "label": "Description",
          "default": "Design Social"
        }
]}
      ],
      "presets": [
        {
          "name": "Showroom Collaboration",
          "category": "Custom"
        }
      ]
    }
    {% endschema %}
    
