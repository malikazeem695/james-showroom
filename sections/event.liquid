<div class="section-hero-banner">
{{ section.settings.desktop_image | image_url: width: 3840 | image_tag: width: section.settings.desktop_image.width, height: image_height_2, class: 'desktop_image', sizes: sizes, widths: widths,  fetchpriority: fetch_priority }}
{{ section.settings.mobile_image | image_url: width: 3840 | image_tag: width: section.settings.mobile_image.width, height: image_height_2, class: 'mobile_image', sizes: sizes, widths: widths,  fetchpriority: fetch_priority }}
<div class="banner-content">
    <h1> {{ section.settings.heading }} </h1>
    <p>
        {{ section.settings.description }}
    </p>
    <div class="date-location-selectors">
        <div class="event-date-picker default_value">
        <select>
          <option value="default">
            Date
          </option>
            {% for block in section.blocks %}
                <option value = "{{ block.settings.event_date |  handleize }}">{{ block.settings.event_date }}</option>
            {% endfor %}
        </select>
        <div class="custom-select-icon">
            {% render 'select-down' %}
        </div>
        <div class="date_icon">
          {% render 'date-icon' %} 
        </div>
        </div>
        <div class="event-location-picker default_value">
        <select>
          <option value="default">
            Location
          </option>
            {% for block in section.blocks %}
                <option value = "{{ block.settings.event_location |  handleize }}">{{ block.settings.event_location }}</option>
            {% endfor %}
        </select>
        <div class="custom-select-icon">
            {% render 'select-down' %}
        </div>
        <div class="date_icon">
          {% render 'location-icon' %} 
        </div>
        </div>
    </div>
</div>
</div>
<section class="events-section">
    <p class="events_quantity"><span class="count_events">{{ section.blocks.size }}</span> events found</p>
  <div class="event-blocks">
    {% for block in section.blocks %}
      <div class="event-block">
        <img class="{{ block.settings.image_alignment }}" src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.event_heading }}" class="event-image">
        <div class="event-content">
            <div class="content_top_container">
          <span class="badge sm-paragraph">{{ block.settings.badge_text }}</span>
          <h2>{{ block.settings.event_heading }}</h2>
          <p class="sm-paragraph">{{ block.settings.event_details }}</p>
          </div>
          <div class="date_time_loc">
            {% if block.settings.event_date != blank %}
            <div class="date">
          <p class="semi-bold">Date</p>
          <p>{{ block.settings.event_date }}</p>
          </div>
            {% endif %}
            {% if block.settings.event_time != blank %}
          <div class="time">
            <p class="semi-bold">Time</p>
            <p>{{ block.settings.event_time }}</p>
          </div>
            {% endif %}
            {% if block.settings.event_location != blank %}
          <div class="location">
            <p class="semi-bold">Location</p>
            <p>{{ block.settings.event_location }}</p>
          </div>
            {% endif %}
          </div>
          <a href="{{ block.settings.event_rsvp_url }}" class="rsvp-link btn btn-primary full-width">
            <span>{{ block.settings.event_rsvp_text }}</span>
            {% render 'right-brand-arrow' %}   
          </a>
        </div>
      </div>
    {% endfor %}

  </div>
</section>

