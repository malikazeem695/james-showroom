    <script>
      document.addEventListener('DOMContentLoaded', function() {
  // Select the select element with the class '.event-date-picker select'
  var selectDateElement = document.querySelector('.event-date-picker select');
  var selectDateParent = document.querySelector('.event-date-picker');
  
  // Check if the select element exists
  if (selectDateElement) {
    // Add change event listener to the select element
    selectDateElement.addEventListener('change', function() {
      // Check if the selected value is 'default'
      if (selectDateElement.value === 'default') {
        console.log('yeshere');
        // Add the class 'default_value' to the parent element '.event-date-picker'
        selectDateParent.classList.add('default_value');
      } else {
        // If the selected value is not 'default', remove the class 'default_value'
        selectDateParent.classList.remove('default_value');
      }
    });
  }

  var selectlocationElement = document.querySelector('.event-location-picker select');
  if (selectlocationElement) {
    selectlocationElement.addEventListener('change', function() {
      if (selectlocationElement.value === 'default') {
        selectlocationElement.closest('.event-location-picker').classList.add('default_value');
      } else {
        selectlocationElement.closest('.event-location-picker').classList.remove('default_value');
      }
    });
  }
});

    </script>